<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MyApplication" parent="Theme.AppCompat.NoActionBar" >
        <item name="toolbarStyle">@style/CustomToolBarStyle</item>
    </style>
    <style name="CustomToolBarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">#FFaa</item>
        <item name="titleTextAppearance">@style/CustomTitleTextAppearance</item>
    </style>
    <style name="CustomTitleTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">32sp</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>