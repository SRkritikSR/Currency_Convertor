<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8E8EE"
>
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            app:title="Currency Convertor"
            android:layout_height="wrap_content"
            android:theme="?attr/toolbarStyle"
            android:minHeight="?attr/actionBarSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            tools:layout_editor_absoluteX="-16dp"
            tools:layout_editor_absoluteY="244dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="vertical"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    android:background="#FFaa"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"

                            >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:padding="16dp">

                                        <EditText
                                            android:id="@+id/currencyFrom"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:hint="Currency From"
                                            android:inputType="text" />

                                        <Spinner
                                            android:id="@+id/spinner"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:entries="@array/selection_list" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="32dp"
                                    android:orientation="horizontal"
                                    android:padding="16dp">

                                        <EditText
                                            android:id="@+id/currencyTo"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:hint="Currency To/Result"
                                            android:inputType="text" />

                                        <Spinner
                                            android:id="@+id/two_spinner"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:entries="@array/selection_list" />

                                </LinearLayout>
                        </LinearLayout>

                </androidx.cardview.widget.CardView>

        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
